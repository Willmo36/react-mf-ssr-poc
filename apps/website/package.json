{
	"name": "website",
	"private": true,
	"version": "0.0.1",
	"description": "",
	"main": "index.js",
	"author": "Max Willmott <max.willmo@gmail.com>",
	"license": "MIT",
	"scripts": {
		"clean": "rm -rf dist",
		"_dev": "ts-node --project ./tsconfig.server.json src/server/index.tsx",
		"dev:stream": "RENDER_TYPE=stream yarn _dev",
		"dev:static": "yarn _dev",
		"build:client": "npx webpack build --mode=production",
		"_build:client:copy": "yarn build:client && cp -r ./dist ./server_dist",
		"build:server:static": "yarn _build:client:copy && npx webpack build --config ./webpack.server.config.js",
		"build:server:stream": "yarn _build:client:copy && RENDER_TYPE=stream npx webpack build --config ./webpack.server.config.js",
		"start:server": "node server_dist/server.js"
	},
	"dependencies": {
		"fragments": "*",
		"react": "*",
		"react-dom": "*",
		"server-shared": "*"
	},
	"devDependencies": {
		"terser-webpack-plugin": "^5.3.6"
	}
}
